{
  "name": "@nimbletank/react-components",
  "version": "0.1.0",
  "description": "Components used in web projects at Nimbletank",
  "main": "dist/index.js",
  "scripts": {
    "build": "webpack",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format:js": "prettier-standard 'components/**/*.js' '.storybook/**/*.js'",
    "precommit": "lint-staged",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build"
  },
  "lint-staged": {
    "linters": {
      "(components|.storybook)/**/*.js": [
        "prettier-standard",
        "test",
        "git add"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nimbletank/react-components"
  },
  "keywords": [
    "react",
    "react.js",
    "components"
  ],
  "author": "Zander Martineau",
  "license": "MIT",
  "dependencies": {
    "babel-plugin-emotion": "^8.0.12",
    "design-system-utils": "^0.11.1",
    "emotion": "^8.0.12",
    "react": "^16.2.0",
    "react-emotion": "^8.0.12"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "chromatism": "^3.0.0",
    "enzyme": "^3.2.0",
    "enzyme-to-json": "^3.2.2",
    "eslint": "^4.13.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2",
    "prettier-standard": "^7.0.3",
    "react-dom": "^16.2.0",
    "react-styleguidist": "^6.0.33",
    "react-test-renderer": "^16.2.0",
    "style-loader": "^0.19.0",
    "styled-components": "^2.2.4",
    "webpack": "^3.10.0"
  }
}
